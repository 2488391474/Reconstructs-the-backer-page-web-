{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
      "#/*": ["./types/*"]
    },
    "types": [
      "element-plus/global",
      "echarts",
      "lodash",
      "web-bluetooth",
      "vite.config.ts",
      "src/**/*.ts",
      "src/**/*.d.ts",
      "src/**/*.vue",
      "types/*.d.ts",
      "types/*.ts",
      "mock/**/*.ts"
    ]
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "vite.config.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue",
    "types/*.d.ts",
    "types/*.ts",
    "mock/**/*.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
